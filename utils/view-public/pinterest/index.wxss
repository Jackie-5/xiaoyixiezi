/**index.wxss**/
@import '../../../css/iconfont.wxss';

.float-left {
  float:left
}


.float-right {
  float:right
}

.clearfix {
  zoom:1
}
.clearfix:after{
  content:".";
  display:block;
  height:0;
  clear:both;
  visibility:hidden
}

.xz-body {

}

.xz-body .xz-body__list {
  padding: 10px 0;
}

.xz-body .xz-body__list .xz-body__list__item {
  width: 49%;
  position: relative;
  color: #fff;
  display: inline-block;
  vertical-align: top;
  z-index: 1;
}

.xz-body .xz-body__list .xz-body__list__item:nth-child(2n) {
  margin-left: 2%;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img {
  position: relative;
}



.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .title {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  font-size: 12px;
  padding: 5px;
  overflow: hidden;
  height: 14px;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom {
  position: absolute;
  bottom: 7px;
  left: 0;
  z-index: 2;
  font-size: 12px;
  width: 100%;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom .name {
  padding: 5px 5px 3px 5px;
  z-index: 99;
  position: relative;
  max-width: 65%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom .zan {
  padding:5px 5px 3px 5px;
  z-index: 99;
  position: relative;
  font-size: 12px;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom .zan .iconfont {
  margin-right: 5px;
  font-size: 11px;
  z-index: 99;
  position: relative;
  font-weight: bold;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom .bg {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}


.zj-body {
  background:#fff;
  font-size: 12px;
  padding-top: 40px;
}
.zj-body .zj-body__list {

}
.zj-body__list__item {
  position:relative;
  max-height: 200px;
  overflow: hidden;
  margin-top: 10px;
}
.zj-body__list__item:first-child {
  margin-top: 0;
}

