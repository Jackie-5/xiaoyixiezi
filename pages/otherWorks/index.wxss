/**index.wxss**/

.xz-index {
  background: #f4f4f4;
  overflow: hidden;
  padding-top: 64px;
}

.xz-index__header {
  width: 100%;
  position:relative;
}

.xz-index__header__bg {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position:absolute;
  left:0;
  top:0;
}

.xz-index__header__basis_info {
  position:relative;
  width: 100%;
  background:#fff;
  z-index: 10;
  color: #292929;
  margin-top: 180px;
}
.xz-index__header__basis_info .photo {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background:#fff;
  position:absolute;
  left: 50%;
  margin-left: -40px;
  top: -45px;
}
.xz-index__header__basis_info .photo .photo__img {
  width: 74px;
  height: 74px;
  border-radius: 50%;
  overflow: hidden;
  margin:3px;
}

.xz-index__header__basis_info .basis_info {
  text-align: center;
  font-size: 14px;
}
.xz-index__header__basis_info .basis_info .basis_info__title {
  padding:40px 0 0 0;
  font-size: 20px;
}
.xz-index__header__basis_info .basis_info .basis_info__dsc {
  font-size: 14px;
  color:#949494;
  padding: 10px 50px;
}

.xz-index__header__basis_info .basis_info .basis__number{
  display: flex;
  border-top: 1px solid #dddddd;
  padding: 10px;
}

.xz-index__header__basis_info .basis_info .basis__number .basis__number__item{
  flex: 1;
  border-left: 1px solid #dddddd;
}
.xz-index__header__basis_info .basis_info .basis__number .basis__number__item:first-child {
  border-left: 0;
}

.xz-index__header__basis_info .basis_info .basis__number .basis__number__item .number{
  font-size: 20px;
}
.xz-index__header__basis_info .basis_info .basis__number .basis__number__item .iconfont{
  font-size: 22px;
}

.scroll-view-item {
  height: 300px;
}

.xz-body {
  padding: 0 2% 0 2%;
}

.xz-body .xz-body__list {
  padding: 10px 0;
}

.xz-body .xz-body__list .xz-body__list__item {
  width: 49%;
  position: relative;
  color: #fff;
  display: inline-block;
  vertical-align: top;
  z-index: 1;
}

.xz-body .xz-body__list .xz-body__list__item:nth-child(2n) {
  margin-left: 2%;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img {
  position: relative;
}



.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .title {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  font-size: 12px;
  padding: 5px;
  overflow: hidden;
  height: 14px;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom {
  position: absolute;
  bottom: 7px;
  left: 0;
  z-index: 2;
  font-size: 12px;
  width: 100%;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom .name {
  padding: 5px 5px 3px 5px;
  z-index: 99;
  position: relative;
  max-width: 65%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom .zan {
  padding:5px 5px 3px 5px;
  z-index: 99;
  position: relative;
  font-size: 12px;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom .zan .iconfont {
  margin-right: 5px;
  font-size: 11px;
  z-index: 99;
  position: relative;
  font-weight: bold;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom .bg {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}