/**index.wxss**/

.enjoy-box {
  background: #fff;
  height: 100%;
}

.enjoy-box .gushi {
  text-align: center;
  padding: 10px 0;
}

.enjoy-box .gushi .gushi__title {

}

.enjoy-box .gushi .gushi__author {

}

.enjoy-box .gushi .gushi__item {
  width: 50%;
  text-align: right;
}

.enjoy-box .gushi .gushi__item:nth-child(2n) {
  text-align: left;
}

.enjoy-box__tags {
  margin-top: 10px;
}

.swiper-font {
  font-size: 14px;
}

.enjoy-box__card {
  background-color: #fff;
  padding: 10px;
  box-shadow: 0 0 5px rgba(0,0,0,.2);
}

.enjoy-box__card .photo {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  overflow: hidden;
}

.enjoy-box__card .right-text {
  margin-left: 15px;
}


.enjoy-box__card .right-text .name {
  font-size:16px;
}

.enjoy-box__card .right-text .time {
  font-size:12px;
  color: #999;
}
.enjoy-box__card .content {
  position: relative;
  margin-top: 10px;
  border-bottom: 1px solid rgba(0,0,0,.1);
}
.enjoy-box__card .content-box {
  max-width: 60%;
  margin-left: 60px;
}

.enjoy-box__card .content .voice {
  position: relative;
  width: 30%;
}

.scale-box {
  transform: scale(0.4);
  position: absolute;
  top: -11px;
  left: 5px;
}

.enjoy-box__card .content-box .seconds {
  position: absolute;
  top:4px;
  right:14px;
  z-index: 99;
  font-size: 14px;
  color: #999;
}

.wifi-symbol {
  width: 50px;
  height: 50px;
  box-sizing: border-box;
  overflow: hidden;
  transform: rotate(135deg);
}

.wifi-circle {
  border: 3px solid #999999;
  border-radius: 50%;
  position: absolute;
}


.function-icon {
  margin-top: 8px;
  text-align: center;
}

.function-icon .iconfont {
  display: inline-block;
  font-size: 14px;
  color: #999;
}
.function-icon .number {
  display: inline-block;
  font-size:14px;
  color:#999;
  margin-left: 5px;
}