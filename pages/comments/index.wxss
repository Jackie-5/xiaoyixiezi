/**index.wxss**/

.comments-box {
  background:#fff;
  padding: 10px 10px 50px 10px;
}

.comments-box__img, .comments-photo {
  width: 35px;
  height: 35px;
  overflow: hidden;
  margin-top: 4px;
}
.comments-box__img image {
  width: 100%;
  height: 100%;
}

.comments-box__content {
  margin-left: 45px;
}

.comments-box__content__title {
  color: #5e647a;
  font-weight: bold;
  font-size: 14px;
}


.comments-box__content__desc {
  font-size: 14px;
}

.comments-photo__img {
  width: 100%;
}

.comments-list {
  font-size: 14px;
  margin-left: 45px;
}

.comments-list__desc {
  font-size: 12px;
}


.comments-list-box {
  background: #f3f3f5;
}
.photo-box {
  margin-top: 10px;
  margin-bottom: 20px;
}

.write-comments {
  position:fixed;
  bottom: 0;
  left:0;
  width: 100%;
  height: 50px;
  z-index: 99;
  background:#fff;
  border-top: 1px solid #ececec;
}

.write-comments__input {
  border:1px solid #ececec;
  height: 30px;
  border-radius: 35px;
  font-size: 12px;
  padding-left: 10px;
  margin-top: 10px;
}

.write-comments__btn {
  margin-left: 15px;
  margin-right: 5px;
  margin-top:-10px;
  width: 50px;
}