/**index.wxss**/

page {
  background:#fff;
}

.is-my{
  padding-bottom: 60px;
}

.is-my__box {
  padding: 20px;
}

.is-my .is-my__photo {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  overflow: hidden;
}
.is-my .is-my__text {
  margin-left: 60px;
}

.is-my .is-my__text .is-my__text__name {
  height: 28px;
}
.is-my .is-my__text .is-my__text__desc {
  font-size: 12px;
  color: #949494;
}

.is-my .is-my__text .is-my__text__name .name {
  max-width: 80%;
  overflow: hidden;
  height: 25px;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 18px;
}
.is-my .is-my__text .is-my__text__name .level {
  text-align:center;
  font-size:8px;
  padding:0 3px;
  background:#ed910d;
  color:#fff;
  border-radius:3px;
  margin-top:9px;
  margin-left:8px;
}

.is-my .is-my__photo image {
  width: 100%;
}

.is-my .card-list {
  border-top: 1px solid rgba(0,0,0, .1);
  margin: 0 10px;
  padding: 0 5px 10px 5px;
}

.is-my .card-list .card-list__item{
  width: 45%;
  margin-left:2%;
  background:#fff;
  box-shadow: 0 0 2px 1px rgba(0,0,0, .1);
  padding: 2%;
  margin-top: 10px;
}
.is-my .card-list .card-list__item:nth-child(2n-1){
  margin-left:0;
}

.is-my .card-list .card-list__item .iconfont {
  font-size: 24px;
}
.is-my .card-list .card-list__item .text {
  font-size: 14px;
  margin-top: 2px;
}

.xz-index__header {
  width: 100%;
  position:relative;
}

.xz-index__header__bg {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position:absolute;
  left:0;
  top:0;
}

.xz-index__header__basis_info {
  position:relative;
  width: 100%;
  background:#fff;
  z-index: 10;
  color: #292929;
  margin-top: 180px;
}
.xz-index__header__basis_info .photo {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background:#fff;
  position:absolute;
  left: 50%;
  margin-left: -40px;
  top: -45px;
}
.xz-index__header__basis_info .photo .photo__img {
  width: 74px;
  height: 74px;
  border-radius: 50%;
  overflow: hidden;
  margin:3px;
}

.xz-index__header__basis_info .basis_info {
  text-align: center;
  font-size: 14px;
}
.xz-index__header__basis_info .basis_info .basis_info__title {
  padding:40px 0 0 0;
  font-size: 20px;
}
.xz-index__header__basis_info .basis_info .basis_info__level {
  display: inline-block;
  text-align:center;
  font-size:12px;
  padding:0 3px;
  background:#ed910d;
  color:#fff;
  border-radius:3px;
}
.xz-index__header__basis_info .basis_info .basis_info__dsc {
  font-size: 14px;
  color:#949494;
  padding: 3px 50px;
}

.xz-index__header__basis_info .basis_info .basis__number{
  display: flex;
  border-top: 1px solid #dddddd;
  padding: 10px;
}

.xz-index__header__basis_info .basis_info .basis__number .basis__number__item{
  flex: 1;
  border-left: 1px solid #dddddd;
}
.xz-index__header__basis_info .basis_info .basis__number .basis__number__item:first-child {
  border-left: 0;
}

.xz-index__header__basis_info .basis_info .basis__number .basis__number__item .number{
  font-size: 20px;
}
.xz-index__header__basis_info .basis_info .basis__number .basis__number__item .iconfont{
  font-size: 24px;
  margin-top: 2px;
}