/**index.wxss**/
.is-my{
  padding-bottom: 10px;
  padding-top: 64px;
}

.is-my__box {
  padding: 20px;
}

.is-my .is-my__photo {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  overflow: hidden;
}
.is-my .is-my__text {
  margin-left: 60px;
}

.is-my .is-my__text .is-my__text__name {
  height: 28px;
}
.is-my .is-my__text .is-my__text__desc {
  font-size: 12px;
  color: #949494;
}

.is-my .is-my__text .is-my__text__name .name {
  max-width: 80%;
  overflow: hidden;
  height: 25px;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 18px;
}
.is-my .is-my__text .is-my__text__name .level {
  text-align:center;
  font-size:8px;
  padding:0 3px;
  background:#ed910d;
  color:#fff;
  border-radius:3px;
  margin-top:9px;
  margin-left:8px;
}

.is-my .is-my__photo image {
  width: 100%;
}

.is-my .card-list {
  border-top: 1px solid rgba(0,0,0, .1);
  margin: 0 10px;
  padding: 0 5px 10px 5px;
}


.card-list .card-button {
  background-color:#ffff;
  color: #6d6d6d;
  text-align: left;
  border: 0;
}
.card-list .card-button:after {
  display: none;
}
.card-list .card-button--hover {
  background-color:#F8F8F8;
  text-align: left;
}

.is-my .card-list .card-list__item{
  width: 49%;
  margin-left:2%;
  background:#fff;
  box-shadow: 0 0 2px 1px rgba(0,0,0, .1);
  margin-top: 10px;
  color: #6d6d6d;
}
.is-my .card-list .card-list__item:nth-child(2n-1){
  margin-left:0;
}

.is-my .card-list .card-list__item .iconfont {
  padding-top: 10px;
  font-size: 24px;
  line-height:24px;
}
.is-my .card-list .card-list__item .text {
  font-size: 14px;
  margin-top: 2px;
}

.is-my__header {
  background:#d69a52;
  padding: 10px 20px 20px 20px;
}

.is-my__header .photo-box {
  position:relative;
  z-index: 10;

}
.is-my__header .photo-box .photo {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background:#fff;
  padding: 2px;
}
.is-my__header .photo-box .photo .photo__img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;

}

.is-my__header .basis_info {
  color:#ffe4c5;
}


.is-my__header .basis_info .basis_info__title {
  font-size: 26px;
  width:70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color:#fff;
}
.is-my__header .basis_info .basis_info__tag {
  font-size: 14px;
  text-align: center;
  margin: 10px 0;
}

.is-my__header .basis_info .basis_info__tag .number {
  font-size: 16px;
  font-weight: bold;
  color:#fff;
}

.is-my__header .basis_info .basis_info__tag .basis_info__tag--item {
  margin-right: 15px;
}


.is-my__header .basis_info .basis_info__level {
  height: 23px;
}
.is-my__header .basis_info .basis_info__level .lv{
  font-size:12px;
  margin-top:6px;
  margin-right:1px;
}

.is-my__header .basis_info .basis_info__level .num{
  font-size: 18px;
  color:#fff;
}

.is-my__header .basis_info .basis_info__dsc {
  border-top: 1px solid #dca564;
  padding-top: 5px;
}