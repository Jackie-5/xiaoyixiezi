/**index.wxss**/

.xz-index {
  background: #f4f4f4;
  overflow-x: hidden;
}

.xz-index__header {
  width: 100%;
  height: 40px;
  background: #fff;
  border-bottom: 1px solid #c9c9c9;
  border-top: 1px solid #c9c9c9;
  margin-top: -1px;
  z-index: 99;
}

.xz-index__header__list {
  width: 40%;
  display: flex;
  text-align: center;
  color: #707988;
  height:100%;
}
.xz-index__header__right{
  width:50%;
}

.xz-index__header__list .active {
  color: #d69a52;
}

.xz-index__header__list__item {
  flex: 1;
  padding-top: 8px;
  height:32px;
  position:relative;
}

.xz-index__header__list__item .icon {
  font-size: 30px;
}

.xz-index__header__list__item .text {
  font-size: 12px;
  padding-top: 4px;
  font-weight: 500;
}


.xz-index__header__list__item .bottom-icon {
  position:absolute;
  bottom: 0;
  left: 15%;
  width: 70%;
  height: 2px;
  background:#d69a52;
}


.scroll-view-item {
  height: 300px;
}

.xz-body {
  padding: 0 2% 51px 2%;
}

.xz-body .xz-body__list {
  padding: 10px 0;
}

.xz-body .xz-body__list .xz-body__list__item {
  width: 49%;
  position: relative;
  color: #fff;
  display: inline-block;
  vertical-align: top;
  z-index: 1;
}

.xz-body .xz-body__list .xz-body__list__item:nth-child(2n) {
  margin-left: 2%;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img {
  position: relative;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.3);
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .title {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  font-size: 12px;
  padding: 5px;
  overflow: hidden;
  height: 14px;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
  font-size: 12px;
  width: 100%;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom .name {
  padding: 10px;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom .zan {
  padding: 10px;
}

.xz-body .xz-body__list .xz-body__list__item .xz-body__list__item__img .bottom .zan .iconfont {
  margin-right: 5px;
  font-size: 12px;
  margin-top: 2px;
}


.zj-body {
  background:#fff;
  font-size: 12px;
  padding-bottom: 60px;
}
.zj-body .zj-body__list {

}
.zj-body__list__item {
  position:relative;
  max-height: 200px;
  overflow: hidden;
  margin-top: 10px;
}
.zj-body__list__item:first-child {
  margin-top: 0;
}

.zj-body__list__item .mark {
  position:absolute;
  top: 0;
  left:0;
  width: 100%;
  height:100%;
  background: rgba(0,0,0,.6);
  z-index: 1;
}

.zj-body__list__item .title {
  position:absolute;
  left: 5px;
  top: 5px;
  color:#fff;
  z-index: 2;
  font-size: 14px;
  font-weight: bold;
}
.zj-body__list__item .bottom {
  position:absolute;
  right: 5px;
  bottom: 5px;
  color:#fff;
  z-index: 2;
}
.zj-body__list__item .author{
  position:absolute;
  left: 8px;
  bottom: 5px;
  color:#fff;
  z-index:2;
}

.zj-body__list__item .bottom .number {
  display: inline-block;
}
.zj-body__list__item .bottom .zan {
  display: inline-block;
  margin-left: 5px;
}
.zj-body__list__item .bottom .zan .iconfont {
  font-size: 12px;
  margin-top:2px;
  margin-right: 3px;
  font-weight: bold;
}