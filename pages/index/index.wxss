.zj-body__list__item .bottom {
  position:absolute;
  left: 0;
  bottom: 0;
  color:#fff;
  z-index: 2;
  width: 100%;
  font-size: 12px;
  padding: 5px 0;
  background: rgba(0,0,0,.6);
}

.zj-body__list__item .bottom .author{
  position:relative;
  color:#fff;
  z-index:2;
}

.zj-body__list__item .bottom .number {
  display: inline-block;
}
.zj-body__list__item .bottom .zan {
  display: inline-block;
  margin-left: 5px;
  margin-right: 10px;
}
.zj-body__list__item .bottom .zan .iconfont {
  font-size: 11px;
  margin-right: 3px;
  font-weight: bold;
