/**index.wxss**/
.xz-index {
  background: #f4f4f4;
  overflow-x: hidden;
  padding-top: 64px;
}

.xz-index__header {
  width: 100%;
  height: 40px;
  background: #fff;
  border-bottom: 1px solid #c9c9c9;
  border-top: 1px solid #c9c9c9;
  margin-top: -1px;
  z-index: 99;
  position:fixed;
}

.xz-index__header__list {
  width: 40%;
  display: flex;
  text-align: center;
  color: #707988;
  height:100%;
}
.xz-index__header__right{
  width:50%;
}

.xz-index__header__list .active {
  color: #d69a52;
}

.xz-index__header__list__item {
  flex: 1;
  padding-top: 8px;
  height:32px;
  position:relative;
}

.xz-index__header__list__item .icon {
  font-size: 30px;
}

.xz-index__header__list__item .text {
  font-size: 12px;
  padding-top: 4px;
  font-weight: 500;
}


.xz-index__header__list__item .bottom-icon {
  position:absolute;
  bottom: 0;
  left: 15%;
  width: 70%;
  height: 2px;
  background:#d69a52;
}


.scroll-view-item {
  height: 300px;
}

.pinter-body {
  padding: 40px 2% 0 2%;
}


.zj-body {
  background:#fff;
  font-size: 12px;
  padding-top: 40px;
}
.zj-body .zj-body__list {

}
.zj-body__list__item {
  position:relative;
  max-height: 200px;
  overflow: hidden;
  margin-top: 10px;
}
.zj-body__list__item:first-child {
  margin-top: 0;
}

