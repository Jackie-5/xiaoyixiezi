/**index.wxss**/

.add-work{
  background: #f4f4f4;
  overflow: hidden;
  padding-bottom: 50px;
}

.add-work .input{
  background:#fff;
}

.card-list {
  margin: 0 10px;
  padding: 10px 5px 20px 5px;
}

.card-list .card-list__item{
  width: 49%;
  margin-left:2%;
  background:#fff;
  box-shadow: 0 0 2px 1px rgba(0,0,0, .1);
  margin-top: 10px;

}

.card-list .card-button {
  background-color:#ffff;
  color: #6d6d6d;
  text-align: left;
  border: 0;
}
.card-list .card-button:after {
  display: none;
}

.card-list .card-button--hover {
  background-color:#F8F8F8;
  text-align: left;
}

.card-list .card-list__item:nth-child(2n-1){
  margin-left:0;
}

.card-list .card-list__item .iconfont {
  padding-top: 10px;
  font-size: 24px;
  line-height:24px;

}
.card-list .card-list__item .text {
  font-size: 14px;
  margin-top: 2px;
}


.work-next {
  position:fixed;
  bottom: 0;
  left:0;
  width: 100%;
  height: 50px;
  z-index: 99;
  background:#fff;
  border-top: 1px solid #ececec;
}
.work-next .iconfont {
  font-size: 12px;
  display: inline-block;
}